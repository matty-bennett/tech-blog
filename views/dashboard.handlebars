<div class="container"><
    <section>
    <h2>Create New Post</h2>
    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Body</label>
            <textarea type="text" name="post-body"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
    </section>
</div>
{{#if posts.length}}
<div class="container">
    <section>
        <h2>Your Posts</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
</div>
{{/if}}

<script src="/javascript/create-post.js"></script>